{
  "compilerOptions": {
    // ğŸ—‚ï¸ File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // âš™ï¸ Environment (ESM + Node)
    "target": "ES2022", // more stable for Node
    "module": "NodeNext", // âœ… correct for ESM in Node
    "moduleResolution": "NodeNext", // âœ… required when using NodeNext
    "lib": ["ES2022"], // optional, helps IntelliSense
    "types": ["node"], // âœ… needed for Node.js globals (process, __dirname, etc.)

    // âš¡ Output Settings
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ğŸ§  Type Safety
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,
    // "noImplicitAny": true,
    "skipLibCheck": true,
    // ğŸ’… Style / Build Behavior
    "verbatimModuleSyntax": true, // âœ… keep your ESM imports exactly as written
    "isolatedModules": true, // âœ… needed for ts-node-dev and incremental builds
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
